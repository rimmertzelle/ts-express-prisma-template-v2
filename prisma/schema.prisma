generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "mongodb"
  url = env("DATABASE_URL") // error will be removed once we upgrade to Prisma version 7
}

model Client {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  email     String   @unique
  name      String?
}